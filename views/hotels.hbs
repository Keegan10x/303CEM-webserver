<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Hotels</title>
		<link rel="stylesheet" href="https://cliff-apollo.codio-box.uk/views/style.css">
		<script type="module" src="/main.js"></script>
	</head>
	<body>
		<header>
			<h1>Hotels</h1>
			<nav>
			{{#if authorised}}
				<a href="/logout">Log out</a>
			
				<nav>
				<a href="/myHolidays">My Holidays</a>
				<a href="/bookHoliday">Book Holidays</a>
				</nav>
			{{else}}
				<a href="/login">Log in</a>
			{{/if}}
			</nav>
			<nav>
				<a href="/">Home</a>
				<a href="/flights">See Flights</a>
				<a href="/tours">See Tours</a>
				<a href="/insurance">See Insurance Deals</a>
			</nav>
		</header>
	<main>
	{{#each items}}
		<figure>		
			<figcaption>{{this.hotelName}}</figcaption>
			<figcaption>POST CODE: {{this.postcode}}</figcaption>
			<figcaption>Country: {{this.country}}</figcaption>
			<img src = "{{this.hotelImg}}" width="150">
			<figcaption>Tier: {{this.tier}}</figcaption>	
			<figcaption>Price/Day Â£{{this.roomPrice}}</figcaption>	
		</figure>
		<hr />
	{{/each}}	
	</main>
	</body>
</html>